[flake8]
max-line-length = 100
exclude = 
    __pycache__,
    .git,
    .venv,
    venv,
    backups,
    data/snapshots,
    *.egg-info
ignore = 
    E203,  # whitespace before ':'
    W503,  # line break before binary operator
    E501   # line too long (handled by black)
per-file-ignores =
    __init__.py:F401
